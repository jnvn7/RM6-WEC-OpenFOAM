FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    object      decomposeParDict;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

nodes   1;

cpn     36;

numberOfSubdomains #eval { $nodes*$cpn };

method          hierarchical;

coeffs
{
    n           ($numberOfSubdomains 1 1);
}

