FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    location    "system";
    object      controlDict;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

#include "caseSetup"

application     interFoam;

startFrom       latestTime; //or startTime;	

startTime       $startTime;

stopAt          endTime;

endTime         $endTime; 

deltaT          0.01;

writeControl    adjustable;

writeInterval   $writeVTK;

purgeWrite      0;

writeFormat     binary;

writePrecision  6;

writeCompression off;

timeFormat      general;

timePrecision   6;

runTimeModifiable yes;

adjustTimeStep  on;

maxCo           $maxCo;

maxAlphaCo      $maxCo;

maxDeltaT       $maxDeltaT;

functions
{
    #include "waveProbes";
}


