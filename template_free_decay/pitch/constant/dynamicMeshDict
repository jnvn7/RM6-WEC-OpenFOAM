FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    object      dynamicMeshDict;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

#include "../system/caseSetup_overset"

motionSolverLibs    (sixDoFRigidBodyMotion);

dynamicFvMesh       dynamicOversetFvMesh;

solver        sixDoFRigidBodyMotion;

sixDoFRigidBodyMotionCoeffs
{
    // See <system>/caseSetup_overset for WEC properties evaluation
    // e.g. CG, mass, moment of inertia
    mass            $mass;
    centreOfMass    $objCGV_gl; 
    momentOfInertia ( $Mx $My $Mz);

    // Solver settings
	patches         (object);
	innerDistance   999.0;
	outerDistance   999.1;

    accelerationRelaxation 0.7;

	report          on;             

	solver
    	{
        	type Newmark;
    	}

    // Restraints
    restraints
    {
    }

    // Constraints
	constraints
	{
            fixedTranslationMotion
            {
                sixDoFRigidBodyMotionConstraint   point;
                centreOfRotation                $centreOfMass;
            }
            fixedXZRotationalMotion
            {
                    sixDoFRigidBodyMotionConstraint axis;
                    axis                            (0 1 0);
            }
	}
}
